# open iTerm
ctrl + alt + cmd - return : open -n -a kitty

# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# swap managed window
alt - w : yabai -m window --swap north
alt - a : yabai -m window --swap west
alt - s : yabai -m window --swap south
alt - d : yabai -m window --swap east

# move managed window
shift + alt - w : yabai -m window --warp north
shift + alt - a : yabai -m window --warp west
shift + alt - s : yabai -m window --warp south
shift + alt - d : yabai -m window --warp east

# balance size of windows
ctrl + alt + cmd - b : yabai -m space --balance

# fast focus desktop
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0 : yabai -m space --focus 10

# fast focus previous and next desktop
alt - pageup : yabai -m space --focus prev
alt - pagedown : yabai -m space --focus next

# create and destroy spaces
shift + alt - x : yabai -m space --create
cmd + shift + alt - x : yabai -m space --destroy

# send window to desktop and follow focus
shift + alt - 1 : yabai -m window --space  1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space  2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space  3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space  4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space  5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space  6; yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space  7; yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space  8; yabai -m space --focus 8
shift + alt - 9 : yabai -m window --space  9; yabai -m space --focus 9
shift + alt - 0 : yabai -m window --space  10; yabai -m space --focus 10

# send window to previous and next desktop and follow focus
shift + alt - pageup : yabai -m window --space  prev; yabai -m space --focus prev
shift + alt - pagedown : yabai -m window --space  next; yabai -m space --focus next

# focus monitor
ctrl + alt + cmd - p : yabai -m display --focus recent

# send window to monitor and follow focus
ctrl + alt + cmd + shift - p : yabai -m window --display recent; yabai -m display --focus recent

# move floating window
# shift + ctrl - a : yabai -m window --move rel:-20:0
# shift + ctrl - s : yabai -m window --move rel:0:20

# resize windows
shift + alt - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
shift + alt - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
shift + alt - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
shift + alt - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# set insertion point in focused container
# ctrl + alt - h : yabai -m window --insert west

# toggle window zoom
shift+ alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
shift + alt - r : yabai -m window --toggle split

# float / unfloat window and center on screen
shift + alt - t: yabai -m window --toggle float

# float / unfloat window and center on screen
shift + alt - v : yabai -m window --toggle float;\
           yabai -m window --grid 4:4:1:1:2:2

# Restart Yabai
shift + alt - q : brew services restart yabai
alt + cmd + shift - q : osascript -e 'tell app "System Events" to log out'
